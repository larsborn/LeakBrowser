{% extends 'base.html.twig' %}
{% import 'macros.html.twig' as macro %}
{% block title %}Email by month{% endblock %}

{% block body %}
    <h2>Emails by Month</h2>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th class="col-xs-1">&nbsp;</th>
            <th>Year</th>
            <th>Month</th>
            <th>Count</th>
        </tr>
        </thead>
        <tbody>
        {% for email_by_month in emails_by_month %}
            <tr>
                <td>
                    <a
                        href="{{ path('app_search_filter', {'email.date_month': "%04d-%02d"|format(email_by_month.year, email_by_month.month) }) }}"
                    ><i class="fas fa-list"></i></a>
                </td>
                <td>{{ email_by_month.year }}</td>
                <td>{{ email_by_month.month }}</td>
                <td>{{ email_by_month.mailCount }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
