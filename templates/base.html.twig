<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Leak Browser{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex flex-column">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <a class="navbar-brand" href="#">Leak Browser</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page"
                                   href="{{ path('app_home_home') }}">Home</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Sources
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    {% for source in source_repository.findAll %}
                                        <li><a class="dropdown-item"
                                               href="{{ path('app_source_show', {'sourceId': source.idSuffix}) }}">
                                                {{ source.name }}
                                            </a>
                                        </li>
                                    {% endfor %}
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li><a class="dropdown-item" href="{{ path('app_source_list') }}">List all
                                            Sources</a></li>
                                </ul>
                            </li>
                        </ul>
                        {{ render(controller('App\\Controller\\GlobalSearchController::form')) }}
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">{% block body %}{% endblock %}</div>
    </div>
</div>
</body>
</html>
