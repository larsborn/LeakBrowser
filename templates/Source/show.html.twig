{% extends "base.html.twig" %}
{% block body %}
    <h1>{{ source.name }}</h1>

    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>SHA256</th>
            <th>Size</th>
            <th>Filenames</th>
        </tr>
        </thead>
        <tbody>
        {% for sample in samples %}
            <tr>
                <td>
                    <a href="{{ path('app_sample_sample', {'sha256': sample.sha256}) }}"><i class="fa-solid fa-eye"></i></a>
                    {{ sample.sha256 }}
                </td>
                <td>{{ sample.size|fileSize }}</td>
                <td>{{ sample.fileNames|join(", ") }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
